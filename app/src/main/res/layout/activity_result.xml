<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#0C254A"
            android:text="Thanks for taking the test.Here are your results :"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/score_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Score : "
            android:textColor="#0C254A"
            android:textSize="20sp"
            />
        <TextView

            android:id="@+id/obtained_score_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="**"
            android:textColor="#0C254A"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textColor="#0C254A"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/total_score_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#0C254A"
            android:textSize="20sp"
            android:textStyle="bold"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Response :"
            android:textColor="#0C254A"
            android:textSize="20sp"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/result_inner_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:paddingBottom="60dp"
        android:clipToPadding="false"
        />
    <!--<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        >-->


    <Button
        android:id="@+id/take_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_shape_button"
        android:padding="10dp"
        android:text="Take test again"
        android:textColor="#0C254A"
        android:textAllCaps="false"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textSize="15sp"
        />



    <TextView
        android:id="@+id/all_persons_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scores"
        android:textSize="15sp"

        android:gravity="center"
        android:textColor="#0C254A"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:clickable="true"

        />


</LinearLayout>
</ScrollView>